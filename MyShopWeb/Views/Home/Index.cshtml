<head>


    <link rel="stylesheet" href="~/Content/theme/animate.css">
    <link rel="stylesheet" href="~/Content/theme/sina-nav.css">

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">

        .nav-container {
            min-height: 124px;
        }

        .sina-nav {
            top: 40px;
            position: absolute;
        }
    </style>
</head>

<div class="row">
    <div class="col-md-4">
        @foreach (var item in Model.Products)
        {
            <div class="img-responsive" style="width: 200px;height: 200px;padding:5px;margin:5px;border: solid thin whitesmoke">
                <div class="col-md-12">
                    <img class="img" style="height:250px" src="~/Content/ProductImage/@item.Image" />
                </div>
                <div class="col-md-12">
                    <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id }, null)</strong>
                </div>
                <div class="col-md-12">
                    <p>@item.Description</p>
                </div>
                <div class="col-md-12">
                    <h4>@item.Price</h4>
                </div>
            </div>
        }

    </div>

</div>
<div style="border-style:groove;font-family:'DFKai-SB';width:300px;height:60px;">
    <h2 align="center" style="font-family:Microsoft JhengHei">推薦商品</h2>

</div>


